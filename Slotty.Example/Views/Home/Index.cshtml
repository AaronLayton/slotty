@{
    ViewData["Title"] = "Slotty Demo - Home";
}

<!-- Fill the head slot with page-specific styles -->
<fill name="head">
    <style>
        .slotty-demo {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem;
            border-radius: 10px;
            margin-bottom: 2rem;
        }
        .feature-card {
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            transition: transform 0.2s;
        }
        .feature-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
    </style>
</fill>

<!-- Add a banner before the header -->
<fill name="header:before">
    <div class="alert alert-info text-center mb-0" role="alert">
        🎉 <strong>Welcome to Slotty!</strong> This banner was injected using <code>&lt;fill name="header:before"&gt;</code>
    </div>
</fill>

<!-- Add extra navigation items -->
<fill name="navigation">
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About Slotty</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" href="#examples">Examples</a>
    </li>
</fill>

<!-- Add user menu to navbar right -->
<fill name="navbar-right">
    <div class="d-flex">
        <span class="navbar-text me-3">Slots & Fills Demo</span>
        <button class="btn btn-outline-primary btn-sm">Login</button>
    </div>
</fill>

<!-- Add content after header -->
<fill name="header:after">
    <div class="container">
        <div class="slotty-demo text-center">
            <h2>🎯 Slotty in Action!</h2>
            <p class="mb-0">This colorful section was added using <code>&lt;fill name="header:after"&gt;</code></p>
        </div>
    </div>
</fill>

<!-- Override the default sidebar to create a layout with sidebar -->
<fill name="sidebar">
    <div class="col-md-8">
        <main role="main" class="pb-3">
            <div class="text-center">
                <h1 class="display-4">Welcome to Slotty! 🎰</h1>
                <p class="lead">The flexible ASP.NET Core TagHelper library for dynamic content injection.</p>
            </div>

            <div id="examples" class="mt-5">
                <h2>🚀 What is Slotty?</h2>
                <p>Slotty allows you to define <strong>slots</strong> in your layout templates and <strong>fill</strong> them with content from individual pages or components. This creates a flexible, maintainable way to inject page-specific content into shared layouts.</p>

                <div class="row mt-4">
                    <div class="col-md-6">
                        <div class="feature-card">
                            <h4>🎯 Targeted Content Injection</h4>
                            <p>Place content exactly where you need it in your layout without modifying the layout file.</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="feature-card">
                            <h4>🔄 Multiple Fills</h4>
                            <p>Add multiple pieces of content to the same slot - they'll be rendered in order.</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="feature-card">
                            <h4>🎨 Fallback Content</h4>
                            <p>Define default content in slots that renders when no fills are provided.</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="feature-card">
                            <h4>⚡ High Performance</h4>
                            <p>Minimal overhead with efficient content storage and rendering.</p>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <h3>📝 Example Usage</h3>
                    <p>This page demonstrates various slot fills. Check the page source to see how it's implemented!</p>
                    
                    <div class="bg-light p-3 rounded">
                        <h5>Layout Template (Slots):</h5>
                        <pre><code>&lt;slot name="head"&gt;&lt;!-- Default head content --&gt;&lt;/slot&gt;
&lt;slot name="header:before"&gt;&lt;!-- Optional banner --&gt;&lt;/slot&gt;
&lt;slot name="navigation"&gt;&lt;!-- Extra nav items --&gt;&lt;/slot&gt;</code></pre>
                        
                        <h5 class="mt-3">Page Content (Fills):</h5>
                        <pre><code>&lt;fill name="head"&gt;&lt;style&gt;...&lt;/style&gt;&lt;/fill&gt;
&lt;fill name="header:before"&gt;&lt;div class="alert"&gt;Banner&lt;/div&gt;&lt;/fill&gt;
&lt;fill name="navigation"&gt;&lt;li&gt;...&lt;/li&gt;&lt;/fill&gt;</code></pre>
                    </div>
                </div>
            </div>

            <!-- Content after main body -->
            <slot name="content:after">
                <!-- This will be filled by the content:after fill below -->
            </slot>
        </main>
    </div>
    
    <!-- Sidebar content -->
    <div class="col-md-4">
        <div class="bg-light p-3 rounded">
            <h4>📋 Page Slots Used</h4>
            <ul class="list-unstyled">
                <li>✅ <code>head</code> - Custom styles</li>
                <li>✅ <code>header:before</code> - Banner</li>
                <li>✅ <code>navigation</code> - Extra nav items</li>
                <li>✅ <code>navbar-right</code> - User menu</li>
                <li>✅ <code>header:after</code> - Hero section</li>
                <li>✅ <code>sidebar</code> - This sidebar!</li>
                <li>✅ <code>content:after</code> - See below</li>
                <li>✅ <code>footer-extra</code> - Footer links</li>
                <li>✅ <code>scripts</code> - Page scripts</li>
            </ul>
            
            <div class="mt-3 p-3 bg-info text-white rounded">
                <h5>💡 Pro Tip</h5>
                <p class="mb-0">Slots can have fallback content that renders when no fills are provided, ensuring your layout always looks complete!</p>
            </div>
        </div>
    </div>
</fill>

<!-- Add content after the main body -->
<fill name="content:after">
    <div class="alert alert-success mt-4" role="alert">
        <h4 class="alert-heading">🎉 Content After Main!</h4>
        <p>This content was injected using <code>&lt;fill name="content:after"&gt;</code> and appears after the main page content but within the main container.</p>
    </div>
</fill>

<!-- Add footer extra content -->
<fill name="footer-extra">
    <div class="text-end">
        <a href="https://github.com/your-repo/slotty" class="text-muted me-3">GitHub</a>
        <a href="#" class="text-muted me-3">Documentation</a>
        <a href="#" class="text-muted">Support</a>
    </div>
</fill>

<!-- Add page-specific scripts -->
<fill name="scripts">
    <script>
        console.log('🎰 Slotty page script loaded!');
        
        // Add some interactivity to feature cards
        document.querySelectorAll('.feature-card').forEach(card => {
            card.addEventListener('click', function() {
                this.style.backgroundColor = this.style.backgroundColor === 'rgb(232, 244, 253)' ? '' : '#e8f4fd';
            });
        });
    </script>
</fill>
